{
  "name": "lookmatch",
  "version": "1.0.0",
  "description": "Find the exact clothes from any photo using AI-powered image analysis",
  "private": true,
  "workspaces": [
    "api"
  ],
  "scripts": {
    "dev": "cd api && npm run dev",
    "build": "cd api && npm run build",
    "start": "cd api && npm start",
    "install:all": "npm install && cd api && npm install",
    "clean": "rm -rf node_modules api/node_modules api/dist",
    "test": "cd api && npm test",
    "test:system": "node scripts/test-system.js"
  },
  "keywords": [
    "ai",
    "image-analysis",
    "fashion",
    "clothing",
    "google-vision",
    "nextjs",
    "express",
    "typescript"
  ],
  "author": "LookMatch Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
